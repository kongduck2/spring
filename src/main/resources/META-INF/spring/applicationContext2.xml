<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- 아래의 bean들은 생성자로 의존관계 bean을 주입한다. 커스텀 생성자가 정의되어 있어야 한다.-->
	<bean class="day1.MemberController" id="memberController">
		<constructor-arg ref="memberServiceYourImpl"></constructor-arg>
	</bean>
	
	<bean class="day1.MemberServiceMyImpl" id="memberServiceMyImpl">
		<constructor-arg ref="memberDaoImpl"></constructor-arg>
	</bean>
	
	<bean class="day1.MemberServiceYourImpl" id="memberServiceYourImpl">
		<constructor-arg ref="memberDaoImpl"></constructor-arg>
	</bean>
	
	<bean class="day1.MemberDaoImpl" id="memberDaoImpl">
		<constructor-arg value="MemberDao 메시지 보냅니다."></constructor-arg>
	</bean>

	
</beans>
